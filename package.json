{
  "name": "matchly-patterns",
  "version": "0.0.5",
  "description": "",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "changeset": "changesets version",
    "release": "npm run build && changeset publish",
    "lint": "tsc --noEmit && prettier --check . --ignore-unknown",
    "lint:fix": "tsc --noEmit && prettier --write . --ignore-unknown",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "typescript",
    "pattern-matching",
    "functional-programming",
    "declarative",
    "data-driven",
    "type-safe",
    "matchly"
  ],
  "author": "Benjamin Simmers",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BenSimmers/Matchly.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@types/node": "^22.14.1",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "^3.1.1",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
